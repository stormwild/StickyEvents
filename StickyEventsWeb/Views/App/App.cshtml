@{
    ViewBag.Title = "Events";
}

@section Styles {
    <link href="~/Content/app.css" rel="stylesheet" type="text/css" />
}

<div class="row" data-ng-app="eventsModule" data-ng-controller="eventsMapCtrl">
    <div class="col-md-6">
        <h3>Events</h3>
        <ul class="list-group">
            <li class="list-group-item" ng-repeat="event in events">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Id</th>
                        <td>{{event.Id}}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{event.Name}}</td>
                    </tr>
                    <tr>
                        <th>Date</th>
                        <td>{{event.Date}}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{event.Address.Address1}}</td>
                    </tr>
                </table>
            </li>
        </ul>
        <button class="btn btn-default" ng-click="nextEvent()">Next</button>
    </div>
    <div class="col-md-6">
        <h3>Google Map</h3>
        <div class="map-canvas" ng-></div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places&key=AIzaSyA7ywV8I4YAEZ17FiMWGREIFj8UbEVpKGo"></script>
    <script src="~/Scripts/app.js"></script>
}